@model Borrower
@{
    string title = ViewBag.Action;
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="BorrowerFname">Borrower's First Name</label>
        <input asp-for="BorrowerFname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BorrowerLname">Borrower's Last Name</label>
        <input asp-for="BorrowerLname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BorrowerPhoneNum">Borrower's Phone Number</label>
        <input asp-for="BorrowerPhoneNum" class="form-control" />
    </div>
    <input type="hidden" asp-for="BorrowerId" />
    <button type="submit" class="btn btn-primary p-2">@ViewBag.Action</button>
    <a asp-controller="Borrower" asp-action="Index" class="btn btn-primary p-2">Cancel</a>
</form>