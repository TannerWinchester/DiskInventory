@model List<Artist>
@{ 
    ViewBag.Title = "Artist Manager";
}

<h1 class="text-center p-3">@ViewBag.Title</h1>
<a asp-controller="Artist" asp-action="Add">Add an Artist</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Artist ID</th>
            <th>Artist name</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artist in Model)
        {
            <tr>
                <td>@artist.ArtistId</td>
                <td>@artist.ArtistName</td>
                <td>@artist.ArtistTypeId</td>
                <td>
                    <a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.ArtistId">Edit</a>
                </td>
                <td>
                    <a asp-controller="Artist" asp-action="Delete" asp-route-id="@artist.ArtistId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>